<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/tv_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="TAB" />

    <ImageView
        android:id="@+id/iv_red_point"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="-2dp"
        android:layout_toEndOf="@id/tv_tab_title"
        android:src="@drawable/flyco_ic_mall_un_read_point"
        android:visibility="invisible" />

    <com.feb.flycotablayout_lib.widget.MsgView xmlns:mv="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rtv_msg_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="11.5sp"
        android:visibility="gone"
        mv:mv_backgroundColor="#FD481F"
        mv:mv_isRadiusHalfHeight="true"
        mv:mv_strokeColor="#ffffff"
        mv:mv_strokeWidth="1dp" />

</RelativeLayout>