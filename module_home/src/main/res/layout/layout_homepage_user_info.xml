<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_r25_000">
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nathanib"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="28dp"
        android:textSize="20sp"
        android:textColor="@color/color_white"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_user_name"
        app:layout_constraintTop_toTopOf="@id/tv_user_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
        android:layout_marginStart="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:background="@drawable/common_sp_live_online"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online"
            android:textSize="10sp"
            android:layout_marginStart="2dp"
            android:textColor="#24e672"/>
    </LinearLayout>
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/ic_launcher"
        app:riv_oval="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="20dp"
        android:id="@+id/riv_user_avatar"/>
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/common_ic_id"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        app:layout_constraintStart_toStartOf="@id/tv_user_name"
        android:layout_marginTop="8dp"
        android:id="@+id/iv_id"/>
    <TextView
        android:id="@+id/tv_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#c7c4cc"
        android:text="23456678"
        app:layout_constraintTop_toTopOf="@id/iv_id"
        app:layout_constraintStart_toEndOf="@id/iv_id"
        app:layout_constraintBottom_toBottomOf="@id/iv_id"
        android:layout_marginStart="5dp"/>
    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@mipmap/common_ic_homepage_copy"
        app:layout_constraintStart_toEndOf="@id/tv_user_id"
        app:layout_constraintTop_toTopOf="@id/tv_user_id"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_id"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/tv_user_sign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This is our first chat. Nice to meet you. Welcome to call me."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="34dp"
        app:layout_constraintTop_toBottomOf="@id/riv_user_avatar"
        android:layout_marginTop="17dp"
        android:textColor="@color/color_white"/>
    <View
        android:id="@+id/view_center_line"
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:background="#c7c4cc"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user_sign"
        />
    <View
        android:id="@+id/view_left_line"
        android:layout_width="1dp"
        android:layout_height="17dp"
        android:background="#c7c4cc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view_center_line"
        app:layout_constraintTop_toTopOf="@id/view_center_line"
        app:layout_constraintBottom_toBottomOf="@id/view_center_line"
        />
    <View
        android:id="@+id/view_right_line"
        android:layout_width="1dp"
        android:layout_height="17dp"
        android:background="#c7c4cc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_center_line"
        app:layout_constraintTop_toTopOf="@id/view_center_line"
        app:layout_constraintBottom_toBottomOf="@id/view_center_line"
        />

    <LinearLayout
        android:id="@+id/ll_follow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/view_left_line"
        app:layout_constraintTop_toTopOf="@id/view_center_line"
        app:layout_constraintEnd_toStartOf="@id/view_center_line">
        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Age"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="26"
            android:textColor="#C7C4CC"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_following"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/ll_follow"
        app:layout_constraintEnd_toStartOf="@id/view_left_line"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_following"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:text="Gender"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Female"
            android:textColor="#C7C4CC"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_moments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/ll_follow"
        app:layout_constraintEnd_toStartOf="@id/view_right_line"
        app:layout_constraintStart_toEndOf="@id/view_center_line">

        <TextView
            android:id="@+id/tv_moments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Location"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Moments"
            android:textColor="#C7C4CC"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_visitor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/ll_follow"
        app:layout_constraintStart_toEndOf="@id/view_right_line"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_visitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Followers"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="888"
            android:textColor="#C7C4CC"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>