<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher"
        android:layout_marginStart="16dp"
        app:riv_oval="true"
        android:id="@+id/iv_msg_avatar"/>
    <TextView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:textColor="@color/color_white"
        android:textSize="10sp"
        android:background="@drawable/common_msg_sum_bg"
        android:text="5"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/iv_msg_avatar"
        app:layout_constraintBottom_toBottomOf="@id/iv_msg_avatar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Melissa Ajinotm"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toTopOf="@id/iv_msg_avatar"
        app:layout_constraintStart_toEndOf="@id/iv_msg_avatar"
        android:layout_marginStart="13dp"
        android:layout_marginTop="7dp"
        android:id="@+id/tv_msg_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration 00:20 08-16"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_msg_name"
        app:layout_constraintStart_toStartOf="@id/tv_msg_name"/>

    <ImageView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/home_ic_live_online_mark"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/iv_msg_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/common_msg_sp_line"/>
</androidx.constraintlayout.widget.ConstraintLayout>