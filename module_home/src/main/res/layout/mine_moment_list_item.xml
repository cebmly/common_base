<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="20dp"
        android:background="@drawable/shape_mine_moment_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:riv_oval="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/riv_user_avatar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matthew"
            android:textColor="@color/color_text_name"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/riv_user_avatar"
            app:layout_constraintTop_toTopOf="@id/riv_user_avatar"
            android:layout_marginStart="7dp"
            android:id="@+id/tv_user_name"
            />
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Todayâ€™s shooting went well, thank you everyone"
            android:textSize="11sp"
            android:textColor="@color/color_white"
            app:layout_constraintStart_toStartOf="@id/tv_user_name"
            app:layout_constraintTop_toBottomOf="@id/tv_user_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/common_ic_control_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/iv_control_more"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/common_ic_translate"
            app:layout_constraintTop_toBottomOf="@id/tv_count"
            app:layout_constraintStart_toStartOf="@id/tv_count"
            android:layout_marginTop="18dp"
            android:id="@+id/iv_translate"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translating..."
            android:textColor="@color/color_white"
            app:layout_constraintTop_toTopOf="@id/iv_translate"
            android:textSize="12sp"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@id/iv_translate"
            app:layout_constraintBottom_toBottomOf="@id/iv_translate"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mine_moment_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv_user_name"
            app:layout_constraintTop_toBottomOf="@id/iv_translate"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@id/rv_mine_moment_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@mipmap/home_ic_trend_zan_no"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_4"
                android:textColor="@color/color_white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_like"
                app:layout_constraintStart_toEndOf="@id/iv_like"
                app:layout_constraintTop_toTopOf="@+id/iv_like"
                tools:text="1.6w" />
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                android:src="@mipmap/common_ic_moment_delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_like_count"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="9dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_4"
                android:textColor="@color/color_white"
                android:textSize="12sp"
                android:text="Delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_delete"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>