<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="22dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher"
        android:layout_marginStart="16dp"
        app:riv_oval="true"
        android:id="@+id/iv_msg_avatar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Melissa Ajinotm"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toTopOf="@id/iv_msg_avatar"
        app:layout_constraintStart_toEndOf="@id/iv_msg_avatar"
        android:layout_marginStart="13dp"
        android:layout_marginTop="7dp"
        android:id="@+id/tv_msg_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IDï¼š23456678"
        android:textSize="12sp"
        android:textColor="@color/color_text_name"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_msg_name"
        app:layout_constraintStart_toStartOf="@id/tv_msg_name"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/iv_msg_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/common_msg_sp_line"/>
</androidx.constraintlayout.widget.ConstraintLayout>