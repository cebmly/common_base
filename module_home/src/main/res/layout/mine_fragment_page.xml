<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_app_background"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="44dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:riv_oval="true"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/iv_user_avatar"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/common_ic_setting_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/iv_setting"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="@id/iv_user_avatar"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/color_white"
                    android:text="Alexander"
                    app:layout_constraintStart_toEndOf="@id/iv_user_avatar"
                    android:id="@+id/tv_user_name"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    android:gravity="center"
                    app:layout_constraintStart_toEndOf="@id/tv_user_name"
                    app:layout_constraintTop_toTopOf="@id/tv_user_name"
                    app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_sex_man"
                    >
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/common_ic_sex_man"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="@id/tv_user_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_user_name"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: 36357533"
                        android:textColor="#C7C4CC"
                        android:textSize="16sp"/>
                    <ImageView
                        android:id="@+id/iv_copy"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="@dimen/dp_4"
                        android:src="@mipmap/common_ic_copy"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <View
                    android:id="@+id/view_center_line"
                    android:layout_width="1dp"
                    android:layout_height="17dp"
                    android:background="@color/color_white"
                    android:layout_marginTop="52dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_user_avatar"
                    />
                <View
                    android:id="@+id/view_left_line"
                    android:layout_width="1dp"
                    android:layout_height="17dp"
                    android:background="@color/color_white"
                    app:layout_constraintStart_toStartOf="@id/iv_user_avatar"
                    app:layout_constraintEnd_toStartOf="@id/view_center_line"
                    app:layout_constraintTop_toTopOf="@id/view_center_line"
                    app:layout_constraintBottom_toBottomOf="@id/view_center_line"
                    />
                <View
                    android:id="@+id/view_right_line"
                    android:layout_width="1dp"
                    android:layout_height="17dp"
                    android:background="@color/color_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/view_center_line"
                    app:layout_constraintTop_toTopOf="@id/view_center_line"
                    app:layout_constraintBottom_toBottomOf="@id/view_center_line"
                    />

                <LinearLayout
                    android:id="@+id/ll_follow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/view_left_line"
                    app:layout_constraintTop_toTopOf="@id/view_center_line"
                    app:layout_constraintBottom_toBottomOf="@id/view_center_line"
                    app:layout_constraintEnd_toStartOf="@id/view_center_line">
                    <TextView
                        android:id="@+id/tv_follow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/color_white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="7389"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Follow"
                        android:textColor="#C7C4CC"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_following"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="@id/ll_follow"
                    app:layout_constraintEnd_toStartOf="@id/view_left_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_user_avatar">

                    <TextView
                        android:id="@+id/tv_following"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/color_white"
                        android:textSize="20sp"
                        android:text="43"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Following"
                        android:textColor="#C7C4CC"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_moments"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="@id/ll_follow"
                    app:layout_constraintEnd_toStartOf="@id/view_right_line"
                    app:layout_constraintStart_toEndOf="@id/view_center_line"
                    app:layout_constraintTop_toBottomOf="@+id/iv_user_avatar">

                    <TextView
                        android:id="@+id/tv_moments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/color_white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="43"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Moments"
                        android:textColor="#C7C4CC"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_visitor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="@id/ll_follow"
                    app:layout_constraintStart_toEndOf="@id/view_right_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_user_avatar">

                    <TextView
                        android:id="@+id/tv_visitor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/color_white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="7987"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Visitor"
                        android:textColor="#C7C4CC"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_vip"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@mipmap/common_ic_vip_bg"
                    app:layout_constraintTop_toBottomOf="@id/ll_follow"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/common_ic_mine_vip"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/dp_10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valid until 2023-12-15 23:59:59"
                        android:textSize="10sp"
                        android:textColor="@color/color_white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_vip"
                        android:layout_width="70dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/common_match_start_bg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        >
                        <TextView
                            android:layout_width="66dp"
                            android:layout_height="20dp"
                            android:text="Sign-in"
                            android:textColor="@color/color_white"
                            android:textSize="10sp"
                            android:gravity="center"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_coins"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardBackgroundColor="#601e1e"
                    android:layout_marginHorizontal="20dp"
                    app:layout_constraintTop_toBottomOf="@id/cl_vip"
                    android:layout_marginTop="@dimen/dp_10">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@mipmap/common_ic_mine_gold"
                            android:layout_marginStart="20dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My coins"
                            android:textColor="#FEF6CA"
                            android:textSize="20sp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="34dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="86dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1290"
                            android:textColor="#FEF6CA"
                            android:textSize="16sp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="63dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="86dp"/>
                        <ImageView
                            android:layout_width="95dp"
                            android:layout_height="80dp"
                            android:src="@mipmap/common_ic_mine_gold_img2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="85dp"
                            android:src="@mipmap/common_ic_mine_gold_img1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_black_list"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="20dp"
                    app:layout_constraintTop_toBottomOf="@id/cv_coins"
                    android:layout_marginTop="34dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@mipmap/mine_ic_frame"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Black list"
                        android:textColor="@color/color_white"
                        android:textSize="16sp"
                        android:layout_marginStart="36dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/mine_ic_right"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_setting"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="20dp"
                    app:layout_constraintTop_toBottomOf="@id/cl_black_list"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@mipmap/mine_ic_setting"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textColor="@color/color_white"
                        android:textSize="16sp"
                        android:layout_marginStart="36dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/mine_ic_right"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>