<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#232323"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.feb.lib_common.view.CustomTopBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/custom_top_bar"/>
            </com.google.android.material.appbar.AppBarLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="486dp"
                            android:background="@color/color_FF0000"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:id="@+id/iv_top_cover"/>
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@mipmap/mine_home_page_finish"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="55dp"
                            android:id="@+id/iv_home_page_finish"/>
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@mipmap/mine_home_page_more"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="55dp"
                            android:id="@+id/iv_home_page_more"/>

                        <!--                    <com.feb.lib_common.view.CustomTopBar-->
                        <!--                        android:layout_width="match_parent"-->
                        <!--                        android:layout_height="wrap_content"-->
                        <!--                        app:layout_constraintStart_toStartOf="parent"-->
                        <!--                        app:layout_constraintTop_toTopOf="parent"-->
                        <!--                        android:id="@+id/custom_top_bar"/>-->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_photo"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="17dp"
                            tools:itemCount="3"
                            tools:listitem="@layout/homepage_photo_item"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/ll_follow"
                            app:layout_constraintBottom_toBottomOf="@id/iv_top_cover"/>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/ll_follow"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/iv_top_cover"
                            android:background="@drawable/shape_r16_4d000000"
                            android:gravity="center"
                            android:layout_marginEnd="17dp"
                            android:layout_marginBottom="23dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/common_ic_homepage_unfollow"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_r25_000"
                        android:layout_marginTop="21dp"
                        android:paddingBottom="15dp"
                        >
                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nathanib"
                            android:layout_marginTop="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="28dp"
                            android:textSize="20sp"
                            android:textColor="@color/color_white"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/tv_user_name"
                            app:layout_constraintTop_toTopOf="@id/tv_user_name"
                            app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
                            android:layout_marginStart="5dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <View
                                android:layout_width="@dimen/dp_10"
                                android:layout_height="@dimen/dp_10"
                                android:background="@drawable/common_sp_live_online"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Online"
                                android:textSize="10sp"
                                android:layout_marginStart="2dp"
                                android:textColor="#24e672"/>
                        </LinearLayout>
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@mipmap/ic_launcher"
                            app:riv_oval="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="20dp"
                            android:id="@+id/riv_user_avatar"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@mipmap/common_ic_id"
                            app:layout_constraintTop_toBottomOf="@id/tv_user_name"
                            app:layout_constraintStart_toStartOf="@id/tv_user_name"
                            android:layout_marginTop="8dp"
                            android:id="@+id/iv_id"/>
                        <TextView
                            android:id="@+id/tv_user_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#c7c4cc"
                            android:text="23456678"
                            app:layout_constraintTop_toTopOf="@id/iv_id"
                            app:layout_constraintStart_toEndOf="@id/iv_id"
                            app:layout_constraintBottom_toBottomOf="@id/iv_id"
                            android:layout_marginStart="5dp"/>
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@mipmap/common_ic_homepage_copy"
                            app:layout_constraintStart_toEndOf="@id/tv_user_id"
                            app:layout_constraintTop_toTopOf="@id/tv_user_id"
                            app:layout_constraintBottom_toBottomOf="@id/tv_user_id"
                            android:layout_marginStart="5dp"/>
                        <TextView
                            android:id="@+id/tv_user_sign"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="This is our first chat. Nice to meet you. Welcome to call me."
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginHorizontal="34dp"
                            app:layout_constraintTop_toBottomOf="@id/riv_user_avatar"
                            android:layout_marginTop="17dp"
                            android:textColor="@color/color_white"/>
                        <View
                            android:id="@+id/view_center_line"
                            android:layout_width="1dp"
                            android:layout_height="21dp"
                            android:background="#c7c4cc"
                            android:layout_marginTop="36dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_user_sign"
                            />
                        <View
                            android:id="@+id/view_left_line"
                            android:layout_width="1dp"
                            android:layout_height="17dp"
                            android:background="#c7c4cc"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/view_center_line"
                            app:layout_constraintTop_toTopOf="@id/view_center_line"
                            app:layout_constraintBottom_toBottomOf="@id/view_center_line"
                            />
                        <View
                            android:id="@+id/view_right_line"
                            android:layout_width="1dp"
                            android:layout_height="17dp"
                            android:background="#c7c4cc"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/view_center_line"
                            app:layout_constraintTop_toTopOf="@id/view_center_line"
                            app:layout_constraintBottom_toBottomOf="@id/view_center_line"
                            />

                        <LinearLayout
                            android:id="@+id/ll_follow_user"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:layout_constraintStart_toEndOf="@id/view_left_line"
                            app:layout_constraintTop_toTopOf="@id/view_center_line"
                            app:layout_constraintEnd_toStartOf="@id/view_center_line">
                            <TextView
                                android:id="@+id/tv_follow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textColor="@color/color_white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="Age"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="26"
                                android:textColor="#C7C4CC"
                                android:textSize="@dimen/sp_14" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_following"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="@id/ll_follow_user"
                            app:layout_constraintEnd_toStartOf="@id/view_left_line"
                            app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                android:id="@+id/tv_following"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textColor="@color/color_white"
                                android:textSize="14sp"
                                android:text="Gender"
                                android:textStyle="bold"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="Female"
                                android:textColor="#C7C4CC"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_moments"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="@id/ll_follow_user"
                            app:layout_constraintEnd_toStartOf="@id/view_right_line"
                            app:layout_constraintStart_toEndOf="@id/view_center_line">

                            <TextView
                                android:id="@+id/tv_moments"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textColor="@color/color_white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="Location"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="Moments"
                                android:textColor="#C7C4CC"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_visitor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="@id/ll_follow_user"
                            app:layout_constraintStart_toEndOf="@id/view_right_line"
                            app:layout_constraintEnd_toEndOf="parent">

                            <TextView
                                android:id="@+id/tv_visitor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textColor="@color/color_white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="Followers"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="888"
                                android:textColor="#C7C4CC"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@drawable/shape_r25_000"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Moment"
                            android:textSize="16sp"
                            android:textColor="@color/color_white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="17dp"
                            android:layout_marginStart="22dp"
                            android:id="@+id/card_title"/>
                        <TextView
                            android:id="@+id/tv_moments_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More"
                            android:textSize="12sp"
                            android:textColor="@color/color_white"
                            android:gravity="center_vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:drawableEnd="@mipmap/mine_ic_right"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="24dp"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card_title"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="22dp"
                            android:id="@+id/rv_moment"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="142dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_r25_000">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:textSize="16sp"
                            android:textColor="@color/color_white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="17dp"
                            android:layout_marginStart="22dp"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_r25_000">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gifts"
                            android:textSize="16sp"
                            android:textColor="@color/color_white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="17dp"
                            android:layout_marginStart="22dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="12dp">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/ll_random"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:gravity="center_horizontal"
                            android:paddingVertical="8dp"
                            android:background="@drawable/shape_match_call_bg"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="video call"
                                android:textSize="12sp"
                                android:textColor="@color/color_white"/>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textSize="12sp"
                                    android:gravity="center"
                                    android:drawablePadding="2dp"
                                    android:drawableStart="@mipmap/common_ic_call_gold"
                                    android:textColor="@color/color_white"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/ match"
                                    android:layout_marginStart="2dp"
                                    android:textSize="12sp"
                                    android:textColor="@color/color_white"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:text="video call"
                            android:textColor="@color/color_white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/common_match_start"/>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/ll_chat"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:gravity="center_horizontal"
                            android:paddingVertical="8dp"
                            android:background="@drawable/shape_match_call_bg"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:orientation="vertical"
                            android:layout_marginStart="20dp">

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.core.widget.NestedScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>